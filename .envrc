export top_level=$(git rev-parse --show-toplevel)
export global_config_path="$(realpath ${top_level})"
export global_config_branch=main # Update if needed
export global_config_path="$(realpath ${top_level}/../observability-poc)" # Update to the path of the global configuration repository
if [ -f resource/.vault-init.json ]; then
  export VAULT_TOKEN=$(jq -r '."root_token"' resources/.vault-init.json)
fi

export local_dns=observability.kubernetes.internal # The Observability cluster DNS domain

export VAULT_ADDR=https://vault.${local_dns}

export NOSUDO=true

# Update the following values to match your environment.

export GITHUB_SERVER=github.com
export GITHUB_MGMT_ORG=pc-dae
export GITHUB_MGMT_REPO=observability-poc
export GITHUB_CONFIG_REPO=dae-mac
export USER_EMAIL=paul.carlton@dae.mn
export GITHUB_USER=paul-carlton
export REGISTRY=paulcarltondae


[ -f $global_config_path/bin/lib.sh ] && source $global_config_path/bin/lib.sh
add_to_path ${global_config_path}/bin
